{% if app.user is not null %}
    {% set wordCount = user_service.getUserwordCountToday() %}

    <div class="row">
        <div class="col-md-12">
            <div class="row {{ (wordCount < 130) ? 'bg-danger' : 'bg-success'}}">
                <div class="col-md-12">
                    <div class="pull-left">
                        <h2 style="margin: 20px 15px;">
                            {# https://www.php.net/manual/en/function.date.php #}
                            <a class="hidden-xs" href="{{ path('homepage') }}" style="color: inherit">{{ "now"|date('l, F jS') }}</a>
                            <a class="visible-xs" href="{{ path('homepage') }}" style="color: inherit">{{ "now"|date('M j') }}</a>
                        </h2>
                    </div>
                    <div class="pull-right">
                        {% if wordCount < 130 %}
                            <span class="hidden-xs" style="display: inline-block; margin-left: 15px;">
                                <small>need</small>
                                <strong class="text-danger">
                                    {{ 130 - wordCount }}</strong>
                                <small>more words for 130 today</small>
                            </span>
                        {% endif %}
                        <h2 title="words saved today" style="display: inline-block; margin: 20px 15px;">{{ wordCount }}
                            <small>words
                                <span class="hidden-xs">today
                                    <small class="hidden-sm">(updates when you save a post)</small>
                                </span>
                            </small>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}