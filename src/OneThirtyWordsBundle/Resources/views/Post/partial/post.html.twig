<div class="post">
    <div class="post-meta col-md-2">
        <div class="post-date">{{ post.date|date('l, F jS') }}</div>
        <div class="post-category">{{ post.category ? post.category.name : "Unknown"}}</div>
    </div>
    <div class="post-body col-md-8 count_this">{{ post.body|nl2br }}</div>
    <div class="post-stats col-md-2">
        {% include 'OneThirtyWordsBundle:Widgets:wordcount.html.twig' %}
    </div>
</div>