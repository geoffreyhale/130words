{% extends '::base.html.twig' %}

{% block content %}

    {% if form is defined %}
        <div class="row-fluid">
            <div class="col-md-12">
                <h3>{{ date }}</h3>
                <strong>Category:</strong> {{ category.name }}
                <hr />
                {{ form_start(form, {'attr': {'class': 'form post'}}) }}
                <div class="form-group">
                    {{ form_widget(form.body, {'attr': {'class': 'form-control body'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
                {% include 'OneThirtyWordsBundle:Widgets:wordcount.html.twig' %}
            </div>
        </div>
    {% endif %}

{% endblock %}