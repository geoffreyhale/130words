<table class="table table-borderless table-hover" style="display: inline-block;">
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ loop.index }}</td>
            <td style="white-space: nowrap;">
                {{ user.displayName }}
            </td>
            <td><span class="badge" style="background-color: #468847;" title="current streak of days written 130 words or more">{{ user.streak|number_format }}</span></td>
        </tr>
    {% endfor %}
    </tbody>
</table>