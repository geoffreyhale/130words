{% extends '::base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h1><i class="fa fa-users" aria-hidden="true"></i> Total Word Counts</h1>
        <table class="table table-borderless table-hover">
            <thead>
            <tr>
                <th style="white-space: nowrap;">130 Word Days</th>
                <th>Username</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.130|number_format }}</td>
                    <td style="white-space: nowrap; width: 100%;">
                        {{ user.username }}
                        <span class="badge" title="days written 130 words or more">{{ user.130|number_format }}</span>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}