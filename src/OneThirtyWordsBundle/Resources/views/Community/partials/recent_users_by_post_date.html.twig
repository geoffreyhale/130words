<table class="table table-borderless table-hover">
    <tbody>
    {% for dateString, posts in postsBatchedByDate %}
        <tr>
            <td style="white-space: nowrap;">
                {{ posts[0].date|date('l, F jS, Y') }}
            </td>
            <td style="width: 100%;">
                {% for post in posts %}
                    {{ post.user }}
                    {% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
        </tr>
    {%  endfor %}
    </tbody>
</table>