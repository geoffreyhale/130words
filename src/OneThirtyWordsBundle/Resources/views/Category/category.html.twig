{% extends '::base.html.twig' %}

{% block content %}
    <h1><i class="fa fa-folder" aria-hidden="true"></i> {{ category.name }}</h1>
    <table class="table table-borderless">
        {% for post in posts %}
            <tr>
                <td style="white-space: nowrap;">
                    {{ post.date|date('l, F jS, Y') }}
                </td>
                <td style="width: 100%;">
                    <a href="{{ path('post', {'post' : post.id}) }}">{{ post.body[:40] ~ '...' }}</a>
                </td>
            </tr>
        {%  endfor %}
    </table>
{% endblock %}