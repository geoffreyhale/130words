{% extends '::base.html.twig' %}

{% block content %}
    <div id="category-edit" class="container-fluid">
        <h1><i class="fa fa-folder-open" aria-hidden="true"></i> {{ category.name }}</h1>
        {% if form is defined %}
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.hide) }}<br>
                {{ form_widget(form.hide, {'attr': {'class': ''}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}