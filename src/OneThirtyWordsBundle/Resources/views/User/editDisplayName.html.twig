{% extends '::base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h3>{{ user.displayName ? user.displayName : user.username }}</h3>
        {% if form is defined %}
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                {{ form_label(form.displayName) }}
                {{ form_widget(form.displayName, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="alert alert-danger">Warning: You can only set this value once. Once saved, it cannot be changed.</div>
            <div class="form-group">
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
            </div>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}