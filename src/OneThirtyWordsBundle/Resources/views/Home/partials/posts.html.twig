<h3>
    Posts
    <div class="btn-group">
        <a href="{{ path('newPost') }}" class="btn btn-primary">
            <i class="fa fa-pencil" aria-hidden="true"></i>
        </a>
        <a href="{{ path('getPosts') }}" class="btn btn-default">
            <i class="fa fa-list" aria-hidden="true"></i>
        </a>
    </div>
</h3>

{% if posts is not empty %}
    <table class="table table-borderless table-hover">
        <tbody>
            {% for post in posts %}
                <tr>
                    <td style="white-space: nowrap;">
                        <strong>{{ (post.category is not null) ? post.category.name : "Uncategorized"}}</strong>
                    </td>
                    <td style="width: 100%;">
                        <a href="{{ path('editPost', {'id' : post.id}) }}">{{ post.body[:400] ~ '...' }}</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}

<div style="margin-top: 15px;">
    <a href="{{ path('newPost') }}" class="btn btn-primary btn-lg">New Post</a>
</div>